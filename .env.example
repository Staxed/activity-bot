# =============================================================================
# GitHub Configuration
# =============================================================================

# GitHub Personal Access Token
# Required for accessing GitHub API and authenticating user
# Generate at: https://github.com/settings/tokens
# Scopes needed: read:user (required), repo (for private repos)
GITHUB_TOKEN=your_github_personal_access_token_here

# Multi-User Tracking Configuration
# Tracked GitHub Users (comma-separated list)
# Specify which GitHub users to track events for
# Example: TRACKED_GITHUB_USERS=user1,user2,user3
# Default: staxed
TRACKED_GITHUB_USERS=staxed

# Per-User Repository Blacklists
# Format: {USERNAME_UPPER}_IGNORED_REPOS (comma-separated patterns with wildcards)
# Each user can have their own blacklist of repositories to ignore
# Supports wildcard patterns using fnmatch syntax
# Example: STAXED_IGNORED_REPOS=staxed/private-*,org/secret-*
# Example: USER1_IGNORED_REPOS=user1/test-*,user1/experimental-*
# Default: (empty - no repositories ignored)
# STAXED_IGNORED_REPOS=
# USER1_IGNORED_REPOS=

# Branch Filtering Configuration
# Tracked Branches (comma-separated list)
# Specify which branches to track. If left empty or not set, tracks all branches.
# Example: TRACKED_BRANCHES=main,develop,staging
# Default: main
TRACKED_BRANCHES=main

# Ignore Branch Patterns (comma-separated list with wildcards)
# Specify patterns to ignore. Supports wildcards (*).
# Ignore patterns take precedence over tracked branches.
# Example: IGNORE_BRANCH_PATTERNS=feature/*,hotfix/*,experimental/*
# Default: (empty - no patterns ignored)
IGNORE_BRANCH_PATTERNS=

# =============================================================================
# Discord Configuration
# =============================================================================

# Discord Bot Token
# Required for bot authentication
# Create bot at: https://discord.com/developers/applications
# Enable "Message Content Intent" in Bot settings
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Channel ID
# The channel where event updates will be posted
# Enable Developer Mode in Discord settings, right-click channel â†’ Copy ID
# Example: DISCORD_CHANNEL_ID=123456789012345678
DISCORD_CHANNEL_ID=123456789012345678

# =============================================================================
# Event Type Toggles
# =============================================================================

# Enable/disable posting for specific event types
# Set to false to disable posting for that event type
# Default: true (all enabled)
POST_COMMITS=true
POST_PULL_REQUESTS=true
POST_ISSUES=true
POST_RELEASES=true
POST_REVIEWS=true
POST_CREATIONS=true
POST_DELETIONS=true
POST_FORKS=true
POST_STARS=true
POST_ISSUE_COMMENTS=true
POST_PR_REVIEW_COMMENTS=true
POST_COMMIT_COMMENTS=true
POST_MEMBERS=true
POST_WIKI_PAGES=true
POST_PUBLIC_EVENTS=true
POST_DISCUSSIONS=true

# =============================================================================
# Event Action Filters
# =============================================================================

# Pull Request Actions (comma-separated)
# Which PR actions to post (opened, closed, merged, reopened, etc.)
# Empty = post all actions
# Default: opened,closed,merged
POST_PR_ACTIONS=opened,closed,merged

# Issue Actions (comma-separated)
# Which issue actions to post (opened, closed, reopened, etc.)
# Empty = post all actions
# Default: opened,closed,reopened
POST_ISSUE_ACTIONS=opened,closed,reopened

# Review States (comma-separated)
# Which review states to post (approved, changes_requested, commented)
# Empty = post all states
# Default: approved,changes_requested
POST_REVIEW_STATES=approved,changes_requested

# Issue Comment Actions (comma-separated)
# Which issue comment actions to post (created, edited, deleted)
# Empty = post all actions
# Default: created
ISSUE_COMMENT_ACTIONS=created

# PR Review Comment Actions (comma-separated)
# Which PR review comment actions to post (created, edited, deleted)
# Empty = post all actions
# Default: created
PR_REVIEW_COMMENT_ACTIONS=created

# Commit Comment Actions (comma-separated)
# Which commit comment actions to post (created)
# Empty = post all actions
# Default: created
COMMIT_COMMENT_ACTIONS=created

# Member Actions (comma-separated)
# Which member actions to post (added, removed, edited)
# Empty = post all actions
# Default: added
MEMBER_ACTIONS=added

# Wiki Actions (comma-separated)
# Which wiki page actions to post (created, edited)
# Empty = post all actions
# Default: created,edited
WIKI_ACTIONS=created,edited

# Discussion Actions (comma-separated)
# Which discussion actions to post (created, edited, deleted, answered, etc.)
# Empty = post all actions
# Default: created,answered
DISCUSSION_ACTIONS=created,answered

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Password (auto-generated recommended)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your_secure_random_password_here

# Database Connection Settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=activity_bot
DB_USER=activity_bot

# Quote Cache Refresh Interval (minutes)
# How often to reload quotes from database
# Default: 60 (1 hour)
QUOTE_CACHE_REFRESH_MINUTES=60

# =============================================================================
# Stats and Achievements Configuration
# =============================================================================

# Enable Stats System
# Set to false to disable stats tracking and achievements
# Default: true
ENABLE_STATS=true

# Stats Cache Refresh Interval (minutes)
# How often to refresh stats cache for slash commands
# Default: 60 (1 hour)
STATS_REFRESH_INTERVAL_MINUTES=60

# Stats Timezone
# Timezone for daily summary times and date boundaries
# Default: America/New_York
STATS_TIMEZONE=America/New_York

# Achievement Thresholds
# Minimum counts required to earn each achievement type
# Valid range: 1-1000
# Default values shown below
ACHIEVEMENT_NIGHT_OWL_THRESHOLD=5
ACHIEVEMENT_EARLY_BIRD_THRESHOLD=5
ACHIEVEMENT_DAILY_DOZEN_THRESHOLD=12
ACHIEVEMENT_WEEKEND_WARRIOR_THRESHOLD=10
ACHIEVEMENT_CENTURY_MONTH_THRESHOLD=100

# Summary Times (HH:MM format)
# Time of day to post daily/weekly/monthly summaries
# Default: 09:00 (9am in STATS_TIMEZONE)
DAILY_SUMMARY_TIME=09:00
WEEKLY_SUMMARY_TIME=09:00
MONTHLY_SUMMARY_TIME=09:00

# =============================================================================
# Application Settings (Optional)
# =============================================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# State File Path
# Path to JSON file storing last processed event ID
# Default: data/state.json
STATE_FILE_PATH=data/state.json

# GitHub Polling Interval
# How often to check for new events (in minutes)
# Recommended: 15 (works with 12-hour deduplication window)
# This interval combined with database deduplication ensures no events are missed
# even during GitHub API indexing delays. Events are fetched up to 48 times
# before aging out of the 12-hour window.
# Valid range: 1-60
# Default: 15
POLL_INTERVAL_MINUTES=15

# Application Version
# Default: 0.1.0
APP_VERSION=0.1.0

# Environment
# Options: development, staging, production
# Default: development
ENVIRONMENT=development
